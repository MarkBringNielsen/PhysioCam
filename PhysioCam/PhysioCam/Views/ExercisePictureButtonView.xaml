<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhysioCam.Views.ExercisePictureButtonView">
    <ContentView.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <ImageButton
                x:Name="ImageButton"
                Source="add_picture"
                WidthRequest="{OnPlatform iOS=300, Android=100}"
                CornerRadius="25"
                BackgroundColor="{StaticResource DarkGreen}"
                Margin="10"
                Padding="10"
                Clicked="ImageButton_OnClicked"
                />
        </StackLayout>
    </ContentView.Content>
</ContentView>